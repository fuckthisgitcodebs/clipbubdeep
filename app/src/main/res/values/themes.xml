<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ClipBubDeep" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/keyboard_accent</item>
        <item name="colorPrimaryVariant">@color/keyboard_accent</item>
        <item name="colorOnPrimary">@color/keyboard_text</item>
        <item name="android:windowBackground">@color/keyboard_background</item>
        <item name="android:textColor">@color/keyboard_text</item>
        <item name="android:colorBackground">@color/keyboard_background</item>
    </style>

    <style name="Widget.KeyboardButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/keyboard_key</item>
        <item name="android:textColor">@color/keyboard_text</item>
        <item name="cornerRadius">28dp</item>
        <item name="strokeColor">@color/keyboard_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Widget.KeyboardButton.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/keyboard_text</item>
        <item name="strokeColor">@color/keyboard_accent</item>
    </style>
</resources>
